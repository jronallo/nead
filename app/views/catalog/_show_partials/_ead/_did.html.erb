<% did = element.xpath('did').first -%>

<h5 id="<%= ead_link_id(element, '') %>">
  <span class="unittitle" itemprop="name"><%= ead_text(did, 'unittitle') %></span>
  <span class="unitdate"><%= ead_text(did, 'unitdate') %></span>
  
  <% if !ead_text(did, 'unitid').blank? %>
    <span class="unitid">(<%= ead_text(did, 'unitid') %>)</span>
  <% end -%>
</h5>

<% if ead_text(did, 'physdesc') %>
  <span class="physdesc"><%= ead_text(did, 'physdesc') %></span>
<% end -%>

<% if !did.xpath('container').blank? -%>
<span class="container">
  [<% did.xpath('container').each_with_index do |container,index| -%>
    <%= container.attribute('type') %>: <%= container.text %><%= ', ' if did.xpath('container').length > 1 && did.xpath('container').length != index+1%>
  <% end -%>]
</span>
<% end -%>

<%= dao(did) %>

